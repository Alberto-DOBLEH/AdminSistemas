validar_ipv4() {
    local ip="$1"
    local regex='^([0-9]{1,3})\.([0-9]{1,3})\.([0-9]{1,3})\.([0-9]{1,3})$'

    if [[ $ip =~ $regex ]]; then
        for i in {1..4}; do
            if (( ${BASH_REMATCH[$i]} > 255 )); then
                return 1  # Si algún octeto es mayor que 255, es inválido
            fi
        done
        return 0  # Si todos los octetos son válidos, la IP es válida
    fi
    return 1  # Si no cumple con la expresión regular, es inválida
}