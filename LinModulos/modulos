validar_ipv4() {
    local ip="$1"
    local regex='^([0-9]{1,3})\.([0-9]{1,3})\.([0-9]{1,3})\.([0-9]{1,3})$'

    if [[ $ip =~ $regex ]]; then
        for octeto in ${BASH_REMATCH[@]:1}; do
            if ((octeto < 0 || octeto > 255)); then
                return 1  # Falso
            fi
        done
        return 0  # Verdadero
    else
        return 1  # Falso
    fi
}
